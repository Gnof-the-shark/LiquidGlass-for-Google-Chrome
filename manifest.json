{
  "manifest_version": 3,
  "name": "iOS 26 Liquid Glass",
  "short_name": "Liquid Glass",
  "version": "1.0.0",
  "description": "Transforms any website with Apple's iOS 26 Liquid Glass effect â€” translucent buttons, frosted glass, specular highlights and smooth animations.",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16":  "icon16.png",
      "32":  "icon32.png",
      "48":  "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16":  "icon16.png",
    "32":  "icon32.png",
    "48":  "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
